<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password"
            android:textColor="@color/green"
            android:textSize="28sp"
            android:fontFamily="@font/inriaserif_bold"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:id="@+id/tvMailAddressHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mail address here"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="100dp"/>

        <TextView
            android:id="@+id/tvEnterYourEmail"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/inter_bold"
            android:text="Enter your email address associated to \n your account"
            android:textColor="@color/nav_unselected"
            android:textSize="15sp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Email"
            android:padding="15dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/input_bg"
            android:textColor="#000"
            android:textColorHint="#A0A0A0"
            android:inputType="textEmailAddress"/>

        <Button
            android:id="@+id/btnRecoverPassword"
            android:layout_width="373dp"
            android:layout_height="55dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/green"
            android:text="Recover Password"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />


    </LinearLayout>

</ScrollView>
