<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="0dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/splashImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/splash_logo"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/titleLocalEat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "LocalEat"
            android:textColor="#0A473D"
            android:textSize="32sp"
            android:fontFamily="@font/inriaserif_bolditalic"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find your next favorite place â€”\nwherever you are!"
            android:textColor="#0A473D"
            android:textSize="20sp"
            android:fontFamily="@font/inriaserif_bold"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnGetStarted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:backgroundTint="#0A473D"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account ? Log in"
            android:textColor="@color/nav_unselected"
            android:textSize="15sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tvTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By continuing, you agree to our Terms \nof Service and Privacy Policy"
            android:textColor="#808080"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:padding="10dp"/>

    </LinearLayout>

</ScrollView>
